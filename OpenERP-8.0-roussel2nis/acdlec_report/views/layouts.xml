<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="external_layout_header_acdlec" inherit_id="report.external_layout_header">
     <xpath expr="//div[@class='header']" position="replace">
     	<div class="header" style="font-size:11px">
	        <div class="row" style="border-bottom: 1px solid black;">
	            <div class="col-xs-4">
	                <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo" style="max-height: 90px;margin-bottom:10px;"/>
	            </div>
	            <div class="col-xs-4 text-uppercase">
	                <div t-field="company.partner_id" 
	                    t-field-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": true}'/>
	            </div>
	            <div class="col-xs-4 text-uppercase">
	                <div>
	                Phone: <span t-field="company.phone"/>
	            	</div>
	            	<div>
	                Fax: <span t-field="company.fax"/>
	            	</div>
	            	<div t-if="company.website">
	                Website: <span t-field="company.website"/>
	            	</div>
	            	<div t-if="company.vat">
	                	VAT: <span t-field="company.vat"/>
	            	</div>
	            	<div>
	                	FORTIS: <span>BE07 0014 5326 0666</span>
	            	</div>
	       		</div>
	        <!-- 
	        <div class="row zero_min_height">
	            <div class="col-xs-12">
	                <div style="border-bottom: 1px solid black;"></div>
	            </div>
	        </div>
	         -->
	         </div>
		</div>
    </xpath>
</template>
</data>
</openerp>